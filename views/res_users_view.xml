<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="res_innoving_users_view_form_inherit"
			model="ir.ui.view">
			<field name="name">Utilisateur</field>
			<field name="model">res.users</field>
			<field name="inherit_id" ref="base.view_users_form" />
			<field name="arch" type="xml">
				<group position="before" col="2">
					<group string="Informations suplémentaires">
						<field name="type_users"  string="Type d'utilisateur" options="{'no_create': True, 'no_open': True}"  required="1"/>
						<field name="superviseur_id"  string="Supervisieur" options="{'no_create': True, 'no_open': True}"
							   domain="[('type_users','=','Superviseur')]" attrs="{'invisible' : ['|',('type_users', '=' ,'Manager'),('type_users', '=' ,'Superviseur')]}" />
						<field name="manager_id"  string="Manager" options="{'no_create': True, 'no_open': True}"
							   domain="[('type_users','=','Manager')]" attrs="{'invisible' : [('type_users', '=' ,'Manager')]}"/>
						<field name="cluster_id"  string="Cluster" options="{'no_create': True, 'no_open': True}"  required="1"/>
						<field name="region_id"  string="Région" options="{'no_create': True, 'no_open': True}"   required="1" domain="[('cluster_id','=',cluster_id)]" />
						<field name="district"  string="District" />
						<field name="departement_id"  string="Département" options="{'no_create': True, 'no_open': True}"  required="1"  domain="[('region_id','=',region_id)]" />
						<field name="sousprefecture_id"  string="Sous préfecture" options="{'no_create': True, 'no_open': True}"  required="1" domain="[('departement_id','=',departement_id)]" />
						<field name="commune_id"  string="Commune" options="{'no_create': True, 'no_open': True}"  required="1" domain="[('sousprefecture_id','=',sousprefecture_id)]" />
						<field name="localite_id"  string="Localité" options="{'no_create': True, 'no_open': True}"  required="1" domain="[('commune_id','=',commune_id)]" />
						<field name="zonerecensement_id"  string="Zone de recensement" options="{'no_create': True, 'no_open': True}"  required="1" domain="[('localite_id','=',localite_id)]" />
						<field name="quartier_id"  string="Quartier" options="{'no_create': True, 'no_open': True}"  required="1" domain="[('zonerecensement_id','=',zonerecensement_id)]" />
						<field name="ilot_ids" widget="many2many_tags"  string="Ilots" options="{'no_create': True, 'no_open': True}"  required="1" domain="[('quartier_id','=',quartier_id)]" />
					</group>
				</group>
			</field>
		</record>
	</data>
</odoo>